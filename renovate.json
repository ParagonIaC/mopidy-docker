{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 3am on Monday"
  ],
  "minimumReleaseAge": "3 days",
  "prConcurrentLimit": 5,
  "branchConcurrentLimit": 5,
  "enabledManagers": [
    "dockerfile"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true,
      "automerge": false
    },
    {
      "description": "Auto-merge minor/patch updates for Debian base images",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "matchPackageNames": [
        "/^debian/"
      ]
    },
    {
      "description": "Group Mopidy extension updates (case-insensitive)",
      "matchDatasources": [
        "pypi"
      ],
      "groupName": "Mopidy extensions",
      "matchPackageNames": [
        "/(?i)^mopidy-/"
      ]
    },
    {
      "description": "Auto-merge patch updates for pip and docker where prudent",
      "matchDatasources": [
        "pypi",
        "docker"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
